@using EFModels;
@{ 
    var list = ViewBag.roomList as List<Tj_Room>;
}
<style>
    #tjPerson li:hover{
        background-color: #5bc0de
    }
</style>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">添加调解案件</h4>
        </div>
        <!--主体内容-->
        <div class="modal-body">
            <form class="form-horizontal" role="form" id="addFrom">
                <div class="form-group">
                    <label class="col-sm-2 control-label">案件</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="请输入案件名称" name="sCaseName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">预计时间</label>
                    <div class="col-sm-10">
                       <span>开始时间</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">案件介绍</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="2" name="UserIntroduce" placeholder="请输入案件介绍"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">调解室选择</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="iTjRoomId" name="iTjRoomId">
                            @foreach (var m in list)
                            {
                                <option value="@m.ID">@m.RoomName
                             @if (m.RoomState.Value) {
                                 @:(使用中)
                             }
                             else
                             {
                                @:(空闲中)
                             }
                            </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">选择调解员</label>
                    <div class="col-sm-10">
                        <div class="btn-group">
                            <input type="text" class="form-control" placeholder="调解员名字搜索" id="iUserId" style="width:80%;float:left">
                            <input type="hidden" name="iUserId" value="">
                            <button type="button" class="btn btn-default dropdown-toggle"
                                    data-toggle="dropdown" style="float:left">
                                <span class="caret"></span>
                                <span class="sr-only">切换下拉菜单</span>
                            </button>
                            <ul id="tjPerson"  class="dropdown-menu" role="menu" style="overflow:auto;height:300px;min-width:218px;">
                             
                            </ul>
                        </div>
                    </div>
                </div> ​
            </form>
        </div>
        <!--主体内容-->
        <div class="modal-footer" style="padding:10px;">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button id="ok" type="button" class="btn btn-primary">确认提交</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var modal = new myBootstarp();

        LoadUser();

        function LoadUser(searchText) {
            //加载调解员数据
            modal.Ajax("/Admin/TjCase/UserList", { searchText: searchText }, function (r) {
                var rows = r.data;
                var html = [];
                $(rows).each(function () {
                    html.push("<li data-id="+this.ID+">");
                    html.push('<img style="width:70px;height:90px;margin-left:10px;margin-top:5px;margin-right:10px;" src="' + this.UserPic + '" /><span>'+this.RealName+'</span>');
                    html.push("</li>");
                    html.push('<li class="divider"></li>');
                });
                $('#tjPerson').append(html.join(''));
                //绑定选择事件
                $('#tjPerson li').on("click", function () {
                    var name = $(this).find('span').text();
                    var ID = $(this).attr("data-id");
                    $('#iUserId').val(name);
                    $('#iUserId').next().val(ID);
                });
            });
        }

        //绑定搜索框
        $('#iUserId').on("input", function () {
            var search = $(this).val();
            $('#tjPerson').html("");
            LoadUser(search);
            $('.btn-group').addClass("open");
        });

        //添加操作
        $('#ok').on("click", function () {
            var bootstrapValidator = $("#addFrom").data('bootstrapValidator');
            bootstrapValidator.validate();
            var res = bootstrapValidator.isValid();
            if (res) {//验证通过
                var iUserId = $('#iUserId').next().val();
                var RealName=$('#iUserId').val();
                if (iUserId.length == 0||RealName.length==0) return modal.alert("请选择调解员");
                modal.Ajax("/Admin/TjCase/Insert", $("#addFrom").serialize() + "&RealName=" + RealName, function (r) {
                    modal.alert("添加成功");
                    $('#TjCase').datagrid('reload');
                    modal.hideModal();
                });
            }
        });
        //表单验证
        $('#addFrom').bootstrapValidator({
            live: 'disabled',
            message: 'This value is not valid',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                sCaseName: {
                    validators: {
                        notEmpty: {
                            message: '案件名称不能为空'
                        }
                    }
                }
            }
        });
    });
</script>

